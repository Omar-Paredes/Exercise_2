@{
    ViewData["Title"] = "TestNumber";
}

<h1>Guess a number</h1>

<form asp-action="TestNumber" method="post">
    <label for="number">Number:</label>
    <input id="number" name="userGuess" type="number" />

    <input type="submit" value="Test number" />
</form>

@if (ViewBag.number != null)
{
    <h3>@ViewBag.number</h3>
}